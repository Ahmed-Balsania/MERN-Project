<% layout("/layouts/boilerplate") -%>
<div class="container-fluid mb-5">
<body>
  <div class="row">
    <div class="col col-lg-6 col-md-8 col-sm-12 offset-3 ml-3">
      <b class="pt-4">Title : <big><%=item.title%></big></b><br>
    </div>
    <div class="row">
      <div class="col col-lg-6 col-md-8 col-sm-12  offset-sm-3">
        <div class="card">
          <img src="<%=item.image.url%>" height="20px"  class="card-img-top show-img" alt="img">
          <div class="card-body">
            <p class="card-text mt-4">
              <b>Owner</b> : <i><%=item.owner.username%></i><br>
             <b>Description</b> : <%=item.description%><br>
             <b>Price</b> :  &#8377; <%=item.price%> <br>
            <b>Location </b>: <%=item.location%><br>
           <b>Country</b> : <%=item.country%>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% if(currUser && currUser._id.equals(item.owner._id)){ %>
    <div class="row">
      <div class="col col-lg-6 col-md-8 col-sm-12 offset-sm-3 ml-3">
       <a class="ml-3" href="/listings/<%=item._id%>/edit"><button class="special-btn btn btn-dark ">Edit</button></a>
       &emsp;
       <form class="ml-3" method="post" id="del-form" action="/listings/<%=item._id%>?_method=DELETE">
        <button class="btn btn-dark ml-3">Delete</button>
       </form>
       </div>
    </div>
    <% } %>
    <br><br>
    
    <div class="col col-lg-6 col-md-8 col-sm-10 offset-3 mt-3 main-rev">
      <h3 class="text-center">All reviews</h3>
      <div class="rev_out">
      <% for(review of item.reviews){ %>
        <div class="rev">
         <i>@<%= review.author.username%></i><br>
         <pre class="starability-result" data-rating="<%= review.rating%>"></pre>
         <big> Comment : </big><i>"<%= review.content%>"</i><br>
         <% if(currUser && currUser._id.equals(review.author._id)){ %>
        <form method="post" style="display: inline-block;" action="/listings/<%=item._id%>/reviews/<%= review._id%>?_method=DELETE">
          <button style="text-decoration: none; display: inline-block; position:relative; left: 215px;bottom:5px; color: black; font-size: small;">
           Delete
          </button>
        </form>
        
        <% } %>
      </div>
        <% } %>
        
      </div>
    </div>
    <% if(currUser){ %>
    <div class="col col-lg-6 col-md-8 col-sm-12 offset-3 mt-5">
      
     <form class="border border-black p-3 needs-validation" method="post" novalidate action="/listings/<%=item._id%>/reviews">
      <div class="caption text-center mb-3"><b class="text-center">Drop A Review</b></div>
      <div class="rating mb-3">
        <label  for="rating" class="form-label">Rating</label><br>
        <!-- <input type="range" min="1" max="5"  class="form-control border border-black form-range" id="rating" name="review[rating]"> -->

        <fieldset class="starability-basic">
          <!-- <legend>First rating:</legend> -->
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="comment mb-3">
        <label  for="comment" class="form-label">Comment</label><br>
        <textarea rows="4" required id="comment" class="form-control border border-black" name="review[content]"></textarea>
        <div class="invalid-feedback">Please Add Some Comment For This Review</div>
      </div>
      <br>
      <button class="btn btn-outline-dark pt-2 pb-2 offset-5">Submit</button>
     </form>
    </div>
    <% } %>

 
</div>

</body>
</div>



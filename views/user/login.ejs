<% layout("/layouts/boilerplate") -%>
<body>
 <div class="container-fluid">
  <div class="row">
   <div class="col-6 offset-3">
    <h3 class="text-center">Login to Wanderlsut</h3>
    <form method="post" action="/login" novalidate class="needs-validation">

     <div class="mb-3">
      <label for="username" class="form-label">Username</label><br>
      <input type="text" required id="username" class="form-control border border-black" name="username" >
     </div>

     <div class="mb-3">
      <label for="password" class="form-label">Password</label><br>
      <input type="password" required id="password" class="form-control border border-black" name="password" >
     </div>
   
     <button class="btn btn-dark">Login</button>

    </form>
   </div>
  </div>
 </div>
</body>